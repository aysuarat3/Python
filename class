class Color:
    red:int
    green: int
    blue:int
    def __init__(self, red:int, green:int, blue:int):
        self.red = red
        self.green = green
        self.blue = blue
        pass
    def __str__(self):
        return f"{self.red} {self.green} {self.blue}"
    pass

class Vehicle:
    count_wheel:int = 0
    color:Color = None
    horse:int = 0
    torque:int = 0
    weight:int = 0
    def set_color(self, red:int, green:int, blue:int):
        self.color = Color(red, green, blue)
        pass
    pass


class Truck(Vehicle):
    transport_load:int = 0
    def __init__(self):
        self.horse = 600
        self.torque = 500
        self.color = Color(255, 0, 0)
        pass
    pass

class SedanCar(Vehicle):
    package:str
    def __init__(self, package):
        self.package = package
        self.count_wheel = 4
        self.horse = 240
        self.torque = 500
        pass
    pass


mycar = SedanCar("confort")
# mycar.set_color()


madmax_truck = Truck()
print(madmax_truck.color)
print(madmax_truck.weight)
del madmax_truck
