from datetime import date
# ---
global_student_id = 2021010101




class Student:
    name:str = None
    surname:str = None
    age:int = 0
    id:int
    def __init__(self, name, surname):
        self.id = Student.generate_id()
        self.name = name
        self.surname = surname
        # print("call init")
        pass
    def __del__(self):
        # print(f"deleted {self.name}")
        pass
    def __str__(self):
        return f"{self.__get_fullname()} {self.id} {self.age}"
    def calculate_age(self, born) -> bool:
        today = date.today()
        self.age = today.year - born.year - ((today.month, today.day) < (born.month, born.day))
        if self.age < 13:
            return False
        return True
    @staticmethod
    def generate_id() -> int:
        global global_student_id
        global_student_id = global_student_id + 1
        return global_student_id
    def __get_fullname(self) -> str:
        return f"{self.name} {self.surname}"

    def __add__(self, other):
        return Student( self.name + other.name, self.surname + other.surname)
    pass


